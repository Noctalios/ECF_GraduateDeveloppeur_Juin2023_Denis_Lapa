@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<div class="page">
    <main>
        <div class="header">
            <button class="oi oi-menu" @onclick="ToggleNavMenu"></button>
            <img class="img-header" src="/css/Image/LogoQuaiAntique.png" />
            <span class="connexion">Connexion</span>
        </div>
        <div class="body">
            <div class="sidebar @displayMenu">
                <NavMenu OnClickCallback="ToggleNavMenu"/>
            </div>
            <div class="content">
                @Body
            </div>    
        </div>
    </main>
</div>

@code{
    private bool collapseNavMenu = true;

    private string? displayMenu => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }


}